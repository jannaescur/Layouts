<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryLight"
    android:weightSum="100">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:orientation="horizontal"
        android:weightSum="100"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp">

        <Button
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="10"
            android:layout_gravity="center"
            android:background="@drawable/flecha_gris_izq"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="60dp"
            android:text="Create your event!"
            android:textSize="20dp"
            android:layout_weight="90"
            android:layout_gravity="center"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="80"
        android:orientation="vertical"
        android:weightSum="60"
        android:background="@drawable/layout_superposat_shape"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:elevation="10dp">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="7"
            android:hint="Title"
            android:background="@drawable/edit_text_shape"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:textCursorDrawable="@null">
        </EditText>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="7"
            android:hint="Date and Time"
            android:background="@drawable/edit_text_shape"
            android:layout_marginBottom="10dp"
            android:textCursorDrawable="@null"
            android:id="@+id/editText1">
        </EditText>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="7"
            android:hint="Place"
            android:background="@drawable/edit_text_shape"
            android:layout_marginBottom="10dp"

            android:textCursorDrawable="@null">
        </EditText>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="7"
            android:hint="Description"
            android:background="@drawable/edit_text_shape"
            android:layout_marginBottom="10dp"
            android:textCursorDrawable="@null">
        </EditText>


        <Spinner
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="7"
            android:background="@drawable/edit_text_shape"
            android:layout_marginBottom="10dp"
            android:entries="@array/categories"></Spinner>

        <Button
            android:layout_width="90dp"
            android:layout_height="0dp"
            android:layout_weight="5"
            android:hint="Add a photo"
            android:layout_gravity="center"
            android:id="@+id/button_photo"

            android:background="@drawable/button_shape_light">

        </Button>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="20"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:id="@+id/image_event"
            android:layout_gravity="center"/>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:layout_marginBottom="10dp">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="Create!"
            android:textColor="@color/white"
            android:background="@drawable/button_shape"
            android:layout_centerInParent="true"
            android:elevation="15dp"/>

    </RelativeLayout>
</LinearLayout>